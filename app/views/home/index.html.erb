<%provide(:title, "Home")%>
<!-- banner-text -->
	<div class="banner-text">	
		<div class="container">
	        <div class="banner_text_main">
	          	<h2>Delicious food from the <br> <span>Best Chefs For you.</span></h2>
	          	<div class="agileits_search">
		            <%= form_tag(foods_path, method: "get") do %>
					    	<%= text_field_tag :search, params[:search], placeholder: "Search" %>
					    	<%= submit_tag "GO" %>
					<% end %>
	          	</div> 
	        </div>
		</div>
	</div>
	
	<!-- add-products -->
	<div class="add-products">  
		<div class="container">
			<div class="add-products-row">
				
				<% @counter = 2 %>
				<% @offers.each do |offer| %>
					<% @counterplus = @counter%2 %>
						<% if @counterplus == 0 %>
							<style>.w3ls-add-grids{background: url(<%= offer.image1_url %>)no-repeat 0px 0px;} </style>
							<div class="w3ls-add-grids">
								<a href="<%= food_path(offer) %>"> 
									<h4>Get Upto<span><%= offer.offer_percent %>%<br>Offer</span></h4>
									<h5><%= offer.offer_occasions %> </h5>
									<h6>Details <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></h6>
								</a>
							</div>
						<% else %>
							<style>.w3ls-add-grids.w3ls-add-grids-right{background: url(<%= offer.image1_url %>)no-repeat 0px 0px;} </style>
							<div class="w3ls-add-grids w3ls-add-grids-right">
								<a href="<%= food_path(offer) %>"> 
									<h4>GET Upto<span><br><%= offer.offer_percent %>% Offer</span></h4>
									<h5><%= offer.offer_occasions %></h5>
									<h6>Details <i class="fa fa-arrow-circle-right" aria-hidden="true"></i></h6>
								</a>
							</div>
						<% end %>
					<% @counter += 1 %>
					<% if @counter == 4 %>
						<% break %>
					<% end %>
				<% end %>
				
				<div class="clearfix"> </div> 
			</div>  	 
		</div>
	</div>
