<%provide(:title, "Post Delecious Food")%>
<!-- breadcrumb -->  
	<div class="container">	
		<ol class="breadcrumb w3l-crumbs">
			<li><a href="<%= root_url %>"><i class="fa fa-home"></i> Home</a></li> 
			<li class="active">Food</li>
		</ol>
	</div>
	<!-- //breadcrumb -->
	<div class="login-page about">
		<%= image_tag "img3.jpg", class: "login-w3img" %>
		<div class="container"> 
			<h3 class="w3ls-title w3ls-title1">Create Delecious Food</h3>  
			<div class="login-agileinfo"> 
				<%= form_for @food, url: foods_path do |f| %>

					<%= f.text_field :title, class: "form-control", placeholder: "Title", required: true %>

					<%= f.text_area :description, class: "form-control", placeholder: "Description", required: true %>
					
					<%= f.text_field :cost, class: "form-control", placeholder: "Cost", required: true %>
					
					<%= f.select :location, [['Sylhet','Sylhet'],['Dhaka','Dhaka'],['Khulna','Khulna'],['Rajshahi','Rajshahi'],['Chittagong','Chittagong'],['Barisal','Barisal'],['Rangpur', 'Rangpur'], ['Mymensingh', 'Mymensingh']],{}, class: 'form-control'%>
					
					<%= f.text_area :directions, class: "form-control", placeholder: "Directions" %>
					
					<%= f.text_field :nutrition, class: "form-control", placeholder: "Nutrition" %>
					
					<%= f.text_field :calorie, class: "form-control", placeholder: "Calorie" %>

					<%= f.submit 'Create Delecious Food' %>
				<% end %>
			</div>	 
		</div>
	</div>